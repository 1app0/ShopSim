<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.login.LoginController">
    <children>
        <VBox>
            <children>
                <GridPane prefWidth="300.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="59.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="241.0" minWidth="10.0" prefWidth="241.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label prefHeight="17.0" prefWidth="62.0" text="Username" />
                        <Label prefHeight="17.0" prefWidth="60.0" text="Password" GridPane.rowIndex="1" />
                        <TextField fx:id="usernameTextField" GridPane.columnIndex="1" />
                        <TextField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="loginResultLabel" prefHeight="17.0" prefWidth="243.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <HBox fx:id="buttonBox" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <children>
                                <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#onLoginButton" text="Log in" />
                            </children>
                        </HBox>
                    </children>
                </GridPane>
                <Label text="Shop System" />
            </children>
        </VBox>
    </children>
</AnchorPane>
